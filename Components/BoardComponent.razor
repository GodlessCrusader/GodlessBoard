@using Blazor.Extensions
@using Blazor.Extensions.Canvas.Canvas2D
@using Blazor.Extensions.Canvas
@using BlazorGameInstance.Model
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web


<BECanvas @ref="_canvas" Height="@height" Width="@width"></BECanvas>
<label>Counter :@c</label>
<button class="btn btn-primary" @onclick = "OnClick">onclick</button>
<button class="btn btn-secondary" @onclick = "CanvasRender">Canvas render</button>
@code {
    public int height { get; set; }
    public int width { get; set; }
    public int c { get; set; } = 0;
    private BECanvasComponent _canvas;
    private Canvas2DContext _canvasContext;
    private Board _board { get; set; }
    protected override void OnInitialized()
    {

    }
    public void OnClick()
    {
        c++;

    }
    public async void CanvasRender()
    {
        _board = new Board("Main");
        height = _board.Height;
        width = _board.Width;
        _canvasContext = await _canvas.CreateCanvas2DAsync();
        await _canvasContext.SetFillStyleAsync("gray");
        for(int i=0;i<_canvas.Height;i+=_board.Grid.Size)
        {
            await _canvasContext.FillRectAsync(i, 0, _board.Grid.LineWidth, _board.Height);    
        }
        for(int i=0;i<_board.Width;i+=_board.Grid.Size)
        {
            await _canvasContext.FillRectAsync(0, i, _board.Height, _board.Grid.LineWidth);    
        }
        
        //await _canvasContext.StrokeTextAsync("sosi jepu", 10, 100);
    }
}

