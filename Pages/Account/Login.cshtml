@page
@model GodlessBoard.Pages.Account.LoginModel
@{
}
<div class="container border">
    <h4>Login</h4>
    <form class="align-content-center" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <label class="form-label" asp-for="Credential.UserName"></label>
        <input class="form-control" type="text" asp-for="Credential.UserName">
        <span asp-validation-for="Credential.UserName"></span>
        <br>
        <label class="form-label" asp-for="Credential.Password"></label>
        <input class="form-control" type="password" asp-for="Credential.Password">
        <span asp-validation-for="Credential.Password"></span>
        <br />
        <button class="btn-primary" type="submit">Log in</button>
    </form>
</div>