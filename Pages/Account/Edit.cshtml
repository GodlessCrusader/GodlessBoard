@page

@model GodlessBoard.Pages.Account.EditModel
<head></head>
<base href="/">
@{
    if(User.Identity.IsAuthenticated)
    {
    <div>
        <h3>Your profile:</h3><a asp-page="/Account/Edit">Edit</a>
        <hr>
        <h5>Display name</h5>
        <label>@Model.CurrentUser.DisplayName</label> 
            <component type="typeof(TextFieldEditor)" render-mode="ServerPrerendered" param-User="@Model.CurrentUser"/>
               
        <hr>
        <h5>Profile picture</h5>
            <component type="typeof(EditAvatarFileDialogComponent)" param-CurrentUser = "@Model.CurrentUser" param-imgUrl="@Model.CurrentUser.ProfilePicUrl" render-mode="ServerPrerendered" ></component>
                             
        <hr>
        <h5>About me</h5>
            <component type="typeof(TextAreaEditor)" render-mode="ServerPrerendered" param-User="@Model.CurrentUser"/>
                            
    </div>       
    }
    else
    {
    <div>
            <h5>You are not logged in. Please log in existing account or register a new one!</h5>
            <a asp-page="/Account/Login">Log in</a>
            <a asp-page="/Account/Register">Register</a>
    </div>
    }
}
<script src="_framework/blazor.webassembly.js"></script>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>