@page
@model GodlessBoard.Pages.Account.RegisterModel
@{
}
<div class="container border">
    <h4>Login</h4>
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <label asp-for="Input.UserName"></label>
        <input type="email" asp-for="Input.UserName">
        <span asp-validation-for="Input.UserName"></span>
        <br />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <label asp-for="Input.DisplayName"></label>
        <input type="text" asp-for="Input.DisplayName">
        <span asp-validation-for="Input.DisplayName"></span>
        <br />
        <label asp-for="Input.Password"></label>
        <input type="password" asp-for="Input.Password">
        <span asp-validation-for="Input.Password"></span>
        <br />
        <label asp-for="Input.ConfirmPassword"></label>
        <input type="password" asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword"></span>
        <br />
        <button type="submit">Register</button>
    </form>
</div>