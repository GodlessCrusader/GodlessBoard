@page
@model GodlessBoard.Pages.Account.RegisterModel
@{
}
<div class="container border">
    <h4>Registration</h4>
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <label class="form-label" asp-for="Input.UserName"></label>
        <input class="form-control" type="email" asp-for="Input.UserName">
        <span class="alert-danger" asp-validation-for="Input.UserName"></span>
        <br />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <label class="form-label" asp-for="Input.DisplayName"></label>
        <input class="form-control" type="text" asp-for="Input.DisplayName">
        <span class="alert-danger" asp-validation-for="Input.DisplayName"></span>
        <br />
        <label class="form-label" asp-for="Input.Password"></label>
        <input class="form-control" type="password" asp-for="Input.Password">
        <span class="alert-danger" asp-validation-for="Input.Password"></span>
        <br />
        <label class="form-label" asp-for="Input.ConfirmPassword"></label>
        <input class="form-control" type="password" asp-for="Input.ConfirmPassword">
        <span class="alert-danger" asp-validation-for="Input.ConfirmPassword"></span>
        <br />
        <button class="btn-primary" type="submit">Register</button>
    </form>
</div>